{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@typed/fp/*": [
        "./*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "target": "es2019",
    "lib": [
      "dom",
      "es2019"
    ],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "after": true
      },
      {
        "transform": "@zerollup/ts-transform-paths",
        "afterDeclarations": true
      },
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      },
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": [
    "examples",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.browser-test.ts",
    "tools",
    "cjs",
    "esm",
    "exports.js",
    "exports.d.ts",
    "exports.js.map",
    "exports.d.ts.map",
    "Console",
    "Disposable",
    "Effect",
    "Fiber",
    "Future",
    "Key",
    "Patch",
    "Path",
    "Queue",
    "RemoteData",
    "Resume",
    "Scheduler",
    "Shared",
    "Storage",
    "Stream",
    "Uri",
    "Uuid",
    "browser",
    "common",
    "dom",
    "history",
    "http",
    "io",
    "lambda",
    "logging",
    "logic",
    "node"
  ]
}
