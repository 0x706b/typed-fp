{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "esm",
    "module": "esnext",
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "after": true
      },
      {
        "transform": "@zerollup/ts-transform-paths",
        "afterDeclarations": true
      },
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      },
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": [
    "examples",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.browser-test.ts",
    "tools",
    "cjs",
    "esm",
    "build",
    "index.js",
    "index.d.ts",
    "index.js.map",
    "index.d.ts.map",
    "Adapter",
    "Branded",
    "Disposable",
    "Env",
    "EnvEither",
    "EnvOption",
    "Eq",
    "Fiber",
    "FromEnv",
    "FromResume",
    "Fx",
    "FxT",
    "Hkt",
    "IOEither",
    "MonadRec",
    "Option",
    "Patch",
    "Provide",
    "Queue",
    "Reader",
    "ReaderEither",
    "ReaderTask",
    "ReaderTaskEither",
    "Ref",
    "RefMap",
    "Resume",
    "ResumeEither",
    "ResumeOption",
    "Scheduler",
    "Shared",
    "State",
    "StateEnvEither",
    "StateReaderTaskEither",
    "Stream",
    "Task",
    "TaskEither",
    "TaskOption",
    "WeakKey",
    "function",
    "hooks"
  ],
  "files": [],
  "include": [
    "src"
  ],
  "references": []
}
